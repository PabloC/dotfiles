# Shell Management
alias reload="source ~/.profile"

# Shortcuts
alias c="pbcopy"
alias p="pbpaste"

# SSH Connections
alias fc="ssh root@208.88.125.67"
alias ts="ssh root@208.88.125.213"

# IP Values
alias fcip="echo 208.88.125.67"
alias tsip="echo 208.88.125.213"

# Git Commands
alias gc="git commit -m"
alias gco="git checkout"
alias gm="git merge"
alias ga="git add"
alias gs="git status"
alias gd="git diff"
alias gb="git branch"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gp="git push"
alias gpo="git push origin"
alias gpom="git push origin master"
alias gr="git reset --hard"

# Ruby Gem Commands
alias gi="gem install"

# MongoDB
alias ms="/opt/mongodb/bin/mongod"
alias msd="/opt/mongodb/bin/mongod --fork --logpath=/usr/local/mongodb/logs/log"

# Rails 2.x.x scripts
alias ss="./script/server"
alias sg="./script/generate"
alias sc="./script/console"
alias sp="./script/plugin"

# Rails 3.x.x scripts
alias rs="rails server"
alias rg="rails generate"
alias rc="rails console"
alias rp="rails plugin"

# Ruby Version Manager
alias r2="rvm use ree"
alias r3="rvm use ree@r3"
alias 1.8.7="rvm use 1.8.7"
alias 1.9.0="rvm use 1.9.0"
alias 1.9.1="rvm use 1.9.1"
alias 1.9.2="rvm use 1.9.2"

# Flush Cache
alias flushcache="dscacheutil -flushcache"

# Open GitX
alias gitx="open -a gitx ."

# TextMate Bundles
alias tmb="cd ~/Library/Application\ Support/TextMate/Bundles"